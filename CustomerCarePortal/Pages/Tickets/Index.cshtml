@page
@model CustomerCarePortal.Pages.Tickets.IndexModel
@{
}
<h1>Index</h1>

<h1>All Tickets</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tickets[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tickets[0].Description)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @if (@Model.Tickets is not null)
        {
            @foreach (var item in @Model.Tickets)
            {
                @if (@Model.flag == 1 && @item.TeamAssigned == null)
                {
                    <tr class="bg-secondary bg-opacity-25">
                        <td >
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
                else

                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }

            }

        }
        else
        {
            <tr>
                <td class="h3 text-secondary">
                    No Work Yet Have some Coffee :)
                </td>
            </tr>
        }
    </tbody>
</table>