@page
@model CustomerCarePortal.Areas.Identity.Pages.Roles.IndexModel
@{
    ViewData["Title"] = "Create";
}

<h1>Add New Role</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="AddRole">
            <div class="form-group">
                <label asp-for=NewRole.Name class="control-label"></label>
                <input asp-for=NewRole.Name class="form-control" id="RoleName" />
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Add Role" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<br />
<h1>All Roles in Sytem</h1>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AllRoles[0].Name)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AllRoles)
        {
            <tr>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="link-info text-decoration-none">
                        <div class="w-100">
                            @item.Name
                        </div>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>